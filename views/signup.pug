doctype html
html
    head
        title Page #{name}
        meta(charset='utf-8')
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
    body
        include nav.pug

        div.container.mt-5
            h1 Inscription
            form(method='POST' action='/')
                div.form-group
                    label(for='mail') Email:
                    input#mail.form-control(type='email', placeholder='Email' name='email')
                div.form-group
                    label(for='name') Name:
                    input#name.form-control(type='text', placeholder='Name' name='name')
                div.form-group
                    label(for='pw') Password:
                    input#pw.form-control(type='password' name='password' placeholder='Password')
                button.btn.btn-primary(type='submit') Sign up
            p.mt-2 Vous avez un compte ?
                a.ml-1(href="/signin") Connectez-vous !

            if msg != null
                div.alert.alert-success #{msg}!

            if error != null
                div.alert.alert-danger #{error}!
